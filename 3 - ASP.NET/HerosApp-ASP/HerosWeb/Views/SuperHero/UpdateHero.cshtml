@model HerosWeb.Models.SuperHero

@{
    ViewData["Title"] = "UpdateHero";
}

<h1>UpdateHero</h1>

<h4>SuperHero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>@Model.Alias</h4>
        <form asp-action="UpdateHero">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RealName" class="control-label"></label>
                <input asp-for="RealName" class="form-control" />
                <span asp-validation-for="RealName" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input asp-for="Alias" class="form-control" type="hidden"/>
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HideOut" class="control-label"></label>
                <input asp-for="HideOut" class="form-control" />
                <span asp-validation-for="HideOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllHeroes">Back to List</a>
</div>

